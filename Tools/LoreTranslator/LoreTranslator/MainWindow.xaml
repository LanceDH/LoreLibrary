<Window x:Class="LoreTranslator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="txt_Source" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" AcceptsReturn="True" VerticalAlignment="Top" Width="497" TextChanged="txt_Source_TextChanged"/>
        <ComboBox x:Name="cmb_Locale" HorizontalAlignment="Left" Margin="10,38,0,0" VerticalAlignment="Top" Width="72">
            <ComboBoxItem x:Name="en" IsSelected="True">www</ComboBoxItem>
            <ComboBoxItem x:Name="de" >de</ComboBoxItem>
            <ComboBoxItem x:Name="ru" >ru</ComboBoxItem>
            <ComboBoxItem x:Name="fr" >fr</ComboBoxItem>
            <ComboBoxItem x:Name="es" >es</ComboBoxItem>
            <ComboBoxItem x:Name="it" >it</ComboBoxItem>
            <ComboBoxItem x:Name="pt" >pt</ComboBoxItem>

        </ComboBox>
        <Button x:Name="btn_Generate" Content="Translate" HorizontalAlignment="Left" Margin="87,38,0,0" VerticalAlignment="Top" Width="75" Click="btn_Generate_Click"/>
        <TextBox x:Name="txt_Output" Margin="10,65,5,5" TextWrapping="Wrap"/>
        <Button x:Name="btn_Terms" Content="Terms" HorizontalAlignment="Left" Margin="167,38,0,0" VerticalAlignment="Top" Width="75" Click="btn_Terms_Click"/>
    </Grid>
</Window>
